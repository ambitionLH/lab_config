;
; Zone file for infrastructure;
;
$TTL    86400
@       IN      SOA     admin. hostmaster.admin. (
                        2004060101      ; serial, todays date + todays serial #
                        28800           ; refresh, seconds
                        7200            ; retry, seconds
                        3600000         ; expire, seconds
                        86400 )         ; minimum, seconds
                NS      yellowriver
                MX      10 yellowriver   ; Primary Mail Exchanger
                A       172.16.0.3

;
; Yellowriver is the DHCP/DNS server
; Longriver is the file server and VM server
;
yellowriver         A            172.16.0.3
longriver           A            172.16.0.4

